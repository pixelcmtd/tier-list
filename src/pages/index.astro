---
import { BaseLayout } from "cmdesigns";
import App from "../components/App";
---

<BaseLayout copyrightstart={2023} rightsholder="ThePrimeagen, chrissx Media" lang="en" title="Deez Nuts">
    <div class="center-content">
        <div class="content">
            <App client:load />
        </div>
    </div>
</html>

<style is:global>
    body {
        all: unset;
    }

    .center-content {
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        overflow: hidden;
    }

    .content {
        display: grid;
        grid-template-rows: repeat(6, calc(15vh - 8px));
        grid-template-columns: 1fr 7fr;
        grid-gap: 1vmin;
        color: #0c0c0c;
        font-size: 1.5vmin;
        line-height: 1.5vmin;
        overflow: hidden;
        height: 180vmin;
    }

    .row-title {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        font-size: 3vmin;
        line-height: 4.5vmin;
    }

    /* a row should contain a bunch of square images */
    .row {
        display: flex;
        flex-direction: row;
        width: 100%;
        height: 100%;
    }

    img {
        max-height: 100%;
    }

    .text-editor {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: #fff;
        font-size: 5vmin;
    }

    img.center {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    footer {
        position: absolute;
        width: 100%;
        bottom: 0;
    }
</style>
